{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Papyrus Compile File (Skyrim)",
            "group": "build",
            "type": "process",
            "command": ".\\Papyrus Compiler\\PapyrusCompiler.exe",
            "options": {},
            "args": [
                {
                    "value": "${file}",
                    "quoting": "strong"
                },
                {
                    "value": "-import=.\\MySourceScripts;.\\MySourceScripts\\Reflyem;.\\Resources\\requiem;.\\Resources\\SKSE;.\\Resources\\GameSource;.\\Resources\\GameSource\\Dawnguard;.\\Resources\\GameSource\\Hearthfire;.\\Resources\\GameSource\\Dragonborn",
                    "quoting": "strong"
                },
                {
                    "value": "-output=..\\scripts",
                    "quoting": "strong"
                },
                {
                    "value": "-flags=TESV_Papyrus_Flags.flg",
                    "quoting": "strong"
                }
            ],
            "problemMatcher": [
                "$PapyrusCompiler"
            ],
        },
        {
            "label": "Papyrus Compile File with copy to Source (Skyrim)",
            "group": "build",
            "type": "shell",
            "command": "cp",
            "options": {},
            "args": [
                {
                    "value": "${file}",
                    "quoting": "strong"
                },
                {
                    "value": "..\\scripts\\Source\\${fileBasename}",
                    "quoting": "strong"
                }
            ],
            "dependsOn": [
                "Papyrus Compile File (Skyrim)"
            ],
        },
        {
            "label": "Papyrus Decompile File (Skyrim)",
            "group": "build",
            "type": "process",
            "command": ".\\Champollion\\Champollion.exe",
            "options": {},
            "args": [
                {
                    "value": ".\\Champollion\\ToDecompile\\${fileBasename}",
                    "quoting": "strong"
                },
                {
                    "value": "-p.\\Decompilled",
                    "quoting": "strong"
                },
                {
                    "value": "-a.\\Decompilled",
                    "quoting": "strong"
                }
            ],
            "problemMatcher": [],
        }
    ]
}